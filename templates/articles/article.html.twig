{% extends 'base.html.twig' %}

{% block title %}SymfAPI - {{ article.title }} {% endblock %}

{% block body %}
<div class="container">
<h1>{{article.title}}</h1>
<p>{{article.content}}</p>
</div>
<div class="container">
    <h2>Liste des commentaire</h2>
    <ul>
        {% for comment in comments %}
            <li>
                <h4>{{ comment.author.id }}</h4>
                <small>{{ comment.createdAt | date("d/m/Y") }}</small>
                <p>{{ comment.content }}</p>
            </li>
        {% endfor %}
    </ul>
</div>
<div id="commentAPI" class="container">

</div>
<div id="server-url" hidden>{{ url('home') }}</div>
<script src="/assets/js/CommentAPI.js"></script>
{% endblock %}